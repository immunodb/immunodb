---
const { title } = Astro.props;
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/immunodb/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/immunodb/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/immunodb/favicon-16x16.png"
    />
    <link rel="manifest" href="/immunodb/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div id="content">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: Arial, Helvetica, sans-serif;
  }
  body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  #content {
    flex-grow: 4;
    padding-top: 30px;
    min-width: 800px;
    margin: auto;
  }

  @media (max-width: 868px) {
    #content {
      padding: 10px;
      min-width: 100%;
    }
  }
  @media (max-width: 480px) {
    #content {
      padding: 5px;
      min-width: 100%;
    }
  }
</style>
