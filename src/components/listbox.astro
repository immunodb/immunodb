---
const { title, elements } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <ul>
    {
      elements.map((el: { href: string; name: string }) => (
        <li>
          <a href={el.href}>{el.name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  div {
    border: 1px solid #9f9f9f;
    background-color: #d9d9d9;
    min-width: 200px;
    line-height: 30px;
    border-radius: 4px;
    box-shadow: 0 2px 6px 2px rgba(0, 0, 0, 0.25);
  }

  li {
    list-style: none;
  }
  h2 {
    margin: 20px 35px;
    font-weight: 300;
  }
</style>
