---
const { title, elements } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <ul>
    {
      elements.map((el: { href: string; name: string }) => (
        <li>
          <a href={el.href}>{el.name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  div {
    border: 1px solid #9f9f9f;
    background-color: #f3f3f3;
    min-width: auto;
    line-height: 30px;
    border-radius: 4px;
    box-shadow: 0 1px 2px 0px #00000040;
  }

  ul {
    margin: 10px 20px;
    padding: 0;
  }

  li {
    list-style: none;
  }
  h2 {
    font-family: "Times New Roman", Times, serif;
    margin: 10px 20px;
    font-weight: 300;
  }
</style>
