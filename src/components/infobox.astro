---
import Table from "./table.astro";

const { data } = Astro.props;
---

<div>
  <Table data={data} />
</div>

<style>
  div {
    float: left;
    border: 1px solid #9f9f9f;
    background-color: #d9d9d9;
    width: 320px;
    line-height: 30px;
    border-radius: 4px;
    box-shadow: 0 2px 6px 2px rgba(0, 0, 0, 0.25);
    margin-right: 20px;
  }

  h2 {
    margin: 20px 35px;
    font-weight: 300;
  }
  span {
    font-weight: 600;
  }
</style>
