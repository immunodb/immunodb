---
import Table from "./table.astro";

const { data } = Astro.props;
---

<div>
  <Table data={data} />
</div>

<style>
  div {
    float: left;
    border: 1px solid #9f9f9f;
    background-color: #f3f3f3;
    width: 360px;
    line-height: 30px;
    border-radius: 4px;
    box-shadow: 0 1px 2px 0px #00000040;
    margin-right: 20px;
  }

  h2 {
    margin: 20px 35px;
    font-weight: 300;
  }
  span {
    font-weight: 600;
  }
</style>
